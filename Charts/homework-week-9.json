{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "World Total Covid Cases Per Million (March, 2020)",
  "projection": {
    "type": "equalEarth"
  },
  "layer": [
    {
      "data": {
        "url": "Charts/water.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#a2bed4"
      }
    },
       {
      "data": {
        "url": "Charts/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "grey"
      }
    },
    {
      "data": {
        "url": "Charts/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Charts/Covid-Live.csv"
            },
            "key": "Country",
            "fields": [
              "TotCases/1Mpop"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "grey"
      },
      "encoding": {
        "color": {
          "field": "TotCases/1Mpop",
          "title": "Total Cases Per Million",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [
              10,
              800000
            ],
            "range": [
              "#ffffff",
              "#a1d99b",
              "#31a354",
              "#00441b"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "TotCases/1Mpop",
            "type": "quantitative",
            "title": "Total Cases Per Million"
          }
        ]
      }
    },
    {
      "data": {
        "url": "Charts/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightslategrey"
      }
    }
  ]
}