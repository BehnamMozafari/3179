{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "your_cleaned_data.csv"
    },
    "transform": [{
      "filter": {"field": "Country, Other", "oneOf": ["USA", "India", "France", "Brazil", "Germany", "UK", "Russia", "Turkey", "Italy", "Spain"]}
    }],
    "width": 600,
    "height": 400,
    "mark": "bar",
    "encoding": {
      "x": {"field": "Country, Other", "type": "nominal", "axis": {"title": "Country"}},
      "y": {"field": "value", "type": "quantitative", "axis": {"title": "Per 1M Population"}},
      "color": {"field": "variable", "type": "nominal", "legend": {"title": "Metric"}},
      "tooltip": [
        {"field": "Country, Other", "type": "nominal", "title": "Country"},
        {"field": "variable", "type": "nominal", "title": "Metric"},
        {"field": "value", "type": "quantitative", "title": "Value"}
      ]
    },
    "selection": {
      "Country": {
        "type": "single",
        "fields": ["Country, Other"],
        "bind": {
          "input": "select",
          "options": ["USA", "India", "France", "Brazil", "Germany", "UK", "Russia", "Turkey", "Italy", "Spain"],
          "name": "Country "
        }
      }
    },
    "config": {"bar": {"binSpacing": 1, "continuousBandSize": 30}},
    "layer": [
      {
        "data": {
          "values": [
            {"x": "A", "y": 28}, {"x": "B", "y": 55}, {"x": "C", "y": 43},
            {"x": "D", "y": 91}, {"x": "E", "y": 81}, {"x": "F", "y": 53},
            {"x": "G", "y": 19}, {"x": "H", "y": 87}, {"x": "I", "y": 52}
          ]
        },
        "mark": "line",
        "encoding": {
          "x": {"field": "x", "type": "nominal"},
          "y": {"field": "y", "type": "quantitative"},
          "color": {"value": "firebrick"}
        }
      },
      {
        "transform": [
          {"fold": ["Tot Cases/ 1M pop", "Deaths/ 1M pop"]}
        ],
        "mark": "bar",
        "encoding": {
          "column": {"field": "Country, Other", "type": "ordinal"},
          "x": {"field": "variable", "type": "nominal", "axis": {"title": ""}},
          "y": {"field": "value", "type": "quantitative"},
          "color": {"field": "variable", "type": "nominal", "legend": {"title": "Metric"}}
        }
      }
    ]
  }
  