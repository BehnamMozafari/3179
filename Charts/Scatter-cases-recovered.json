{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Ratio of Cases per Test against Total Tests per million per Country (March, 2020)",
    "background": "#E9F7E9",
    "data": {
        "url": "Charts/Covid-Live.csv"
    },
    "transform": [
        {
            "calculate": "datum['Cases/Test']",
            "as": "Cases per Test"
        },
        {
            "calculate": "datum['TotCases/1Mpop']",
            "as": "Total Cases Per Million"
        },
        {
          "filter": "datum['Cases/Test'] <= 1"
        }
    ],
    "mark": {
        "type": "circle",
        "color": "#4294C7"
    },
    "encoding": {
        "x": {
            "field": "Cases per Test",
            "type": "quantitative"
        },
        "y": {
            "field": "Total Cases Per Million",
            "type": "quantitative"
        },
        "tooltip": [
            {
                "field": "Country",
                "type": "nominal"
            },
            {
                "field": "Total Cases Per Million",
                "type": "quantitative",
                "format": ","
            },
            {
                "field": "Cases per Test",
                "type": "quantitative",
                "format": ","
            }
        ]
    }
}