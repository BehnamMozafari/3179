{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "Covid-Live-StackedBar.csv"},
    "transform": [
        {"filter": "datum['Country'] == 'Thailand' || datum['Country'] == 'Australia' || datum['Country'] == 'Malaysia'"}
    ],
    "facet": {"field": "Variable", "type": "nominal", "columns": 2},
    "spec": {
        "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
        "encoding": {
            "x": {"field": "Country", "type": "ordinal", "axis": {"labelAngle": -45}},
            "y": {"field": "Value", "type": "quantitative"},
            "color": {"field": "Country", "type": "nominal"},
            "tooltip": [
                {"field": "Country", "type": "ordinal"},
                {"field": "Value", "type": "quantitative"}
            ]
        }
    }
}
