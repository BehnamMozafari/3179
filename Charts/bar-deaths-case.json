{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": "Deaths per Thousand Cases by country (March, 2020)",
    "background": "#E9F7E9",
    "data": {
        "url": "Charts/Covid-Live.csv"
    },
    "transform": [
        {
            "calculate": "datum['Deaths/Case']",
            "as": "Deaths Per Thousand Cases"
        },
        {
            "filter": "datum['Country'] == 'France' || datum['Country'] == 'Australia' || datum['Country'] == 'Italy' || datum['Country'] == 'United Kingdom' || datum['Country'] == 'Malaysia'"
        }
    ],
    "encoding": {
        "y": {
            "field": "Country",
            "type": "nominal",
            "axis": null,
            "sort": {
                "field": "Deaths Per Thousand Cases",
                "order": "ascending"
            }
        }
    },
    "layer": [
        {
            "mark": {
                "type": "bar",
                "color": "#4294C7", "cornerRadiusBottomRight": 15, "cornerRadiusTopRight": 15, "cornerRadiusBottomLeft": 15, "cornerRadiusTopLeft": 15
            },
            "encoding": {
                "x": {
                    "aggregate": "sum",
                    "field": "Deaths Per Thousand Cases",
                    "title": "Deaths Per Thousand Cases",
                    "axis": {
                        "grid": false
                    }
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Deaths Per Thousand Cases",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "x": 15,
                "size": 18
            },
            "encoding": {
                "text": {
                    "field": "Country"
                },
                "detail": {
                    "aggregate": "count"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Deaths Per Thousand Cases",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        }
    ],
    "config": {
        "font": "Cabin",
        "style": {
            "cell": {
                "stroke": "transparent"
            }
        }
    }
}