{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 450,
    "title": "Deaths per Case by country (March, 2020)",
    "data": {
        "url": "Charts/Covid-Live.csv"
    },
    "transform": [
        {
            "calculate": "datum['Deaths/Case']",
            "as": "Deaths Per Case"
        },
        {
            "filter": "datum['Country'] == 'France' || datum['Country'] == 'Australia' || datum['Country'] == 'Italy' || datum['Country'] == 'United Kingdom' || datum['Country'] == 'Malaysia'"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "bar",
                "color": "#da8f2e"
            },
            "encoding": {
                "x": {
                    "field": "Country",
                    "type": "nominal",
                    "axis": {
                        "labelAngle": 0
                    }
                },
                "y": {
                    "field": "Deaths Per Case",
                    "type": "quantitative",
                    "title": "Deaths Per Case"
                },
                "tooltip": [
                    {
                        "field": "Country",
                        "type": "nominal"
                    },
                    {
                        "field": "Deaths Per Case",
                        "type": "quantitative",
                        "format": ","
                    }
                ]
            }
        }
    ]
}