{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "COVID-19 Total Cases",
    "width": 800,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "data": {
      "url": "ne_110m_admin_0_countries.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "transform": [
      {
        "lookup": "properties.NAME",
        "from": {
          "data": {
            "url": "Covid-Live.csv"
          },
          "key": "Country",
          "fields": ["Total_Cases"]
        }
      },
      {"calculate": "datum.Total_Cases + 1", "as": "Total_Cases"}
    ],
    "mark": {"type": "geoshape"},
    "encoding": {
      "color": {
        "field": "Total_Cases",
        "type": "quantitative",
        "scale": {"type": "linear"}
      },
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "Country"},
        {"field": "Total_Cases", "type": "quantitative"}
      ]
    }
  }