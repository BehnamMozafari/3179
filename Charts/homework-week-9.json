{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 450,
  "title": "World Total Covid Cases Per Million (March, 2020)",
  "projection": {
    "type": "equalEarth",
    "center": {"expr": "center_to"},
    "scale": {"expr": "zoom_level"}
  },
  "params": [{
    "name": "zoom_level",
    "value": 110,
    "bind": {
    "input": "range",
    "min": 110,
    "max": 800,
    "step": 10,
    "name": "Zoom: "
    }
    },
    {
    "name": "center_to",
    "value": [0, 0],
    "bind": {
    "input": "select",
    "options": [
    [0,0],
    [133.7751, -25.2744],
    [101.9758, -4.2105],
    [15.473, 49.8175],
    [-3.6044, 12.1549],
    [-73.8971, 19.895]
    ],
    "labels": ["Default", "Australia", "Malaysia", "Europe", "Western Africa", "Caribbean"],
    "name": "Map Centre: "
    }}],
  "layer": [
    {
      "data": {
        "url": "Charts/water.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#a2bed4"
      }
    },
       {
      "data": {
        "url": "Charts/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgrey",
        "stroke": "grey"
      }
    },
    {
      "data": {
        "url": "Charts/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "Charts/Covid-Live.csv"
            },
            "key": "Country",
            "fields": [
              "TotCases/1Mpop"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "grey"
      },
      "encoding": {
        "color": {
          "field": "TotCases/1Mpop",
          "title": "Total Cases Per Million",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [
              10,
              800000
            ],
            "range": [
              "#ffffff",
              "#a1d99b",
              "#31a354",
              "#00441b"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "TotCases/1Mpop",
            "type": "quantitative",
            "title": "Total Cases Per Million"
          }
        ]
      }
    },
    {
      "data": {
        "url": "Charts/ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightslategrey"
      }
    }
  ]
}